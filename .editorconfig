root = true

[*]
charset = utf-8
tab_width = 8
insert_final_newline = true
trim_trailing_whitespace = true

[CMakeLists.txt,*.cmake]
indent_size = 4
indent_style = space

[*.{json,yaml,yml}]
indent_size = 2
indent_style = space

[data/Interface/Translations/*.txt]
charset = utf-16le
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = false
